@model PucWebApplication.Models.Usuario

@{
ViewData["Title"] = "Edit";
}

<link rel="stylesheet" href="/css/inicio.css">

<body data-bs-spy="scroll" data-bs-target=".navbar" data-bs-offset="100">
    <!-- TOP NAV -->
    <div class="top-nav" id="home">
    </div>

    <!-- MENU NAV -->
    <nav class=" navbar-expand-lg navbar-light bg-white sticky-top">
        <div class="navbar container">
            <img src="/Imagens/Logo.jpg" class="logo">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="#home">Inicio</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#about">Sobre</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#services">Serviços</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#portfolio">Faxineiras</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#team">Time</a>
                    </li>
                    <!-- <li class="nav-item">
                            <a class="nav-link" href="#reviews">Reviews</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#blog">Blog</a>
                        </li> -->
                </ul>

                @if (User.Identity.IsAuthenticated)
                {
                    <div class="nav-item usuario">
                        <div class="dropdown">
                            <button class="usuario dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Olá, @User.Identity.Name
                            </button>
                            <ul class="dropdown-menu">
                                <li><a asp-controller="Usuarios" asp-action="Edit" asp-route-id="@User.Identity.Name" class="dropdown-item first-item">Meu Perfil</a></li>
                                <hr>
                                <li><a asp-controller="Usuarios" asp-action="Logout" class="dropdown-item last-item">Sair</a></li>
                            </ul>
                        </div>
                    </div>
                }
                else
                {
                    <div class="nav-item usuario">
                        <button data-bs-toggle="modal" data-bs-target="#exampleModal" class="botao">
                            Login
                        </button>
                    </div>
                }



            </div>

        </div>
        <div>
            <div class="col-auto pesquisa">
                <!-- <p> <i class='bx bxs-envelope'></i> minhafaxina@example.com</p>
                        <p> <i class='bx bxs-phone-call'></i> (31) 9555-0114</p> -->
                @using (Html.BeginForm("Pesquisa", "Resultado", FormMethod.Get))
                {
                    <input type="text" name="Pesquisa" placeholder="Pesquise por nome, endereço ou CEP">
                    <input type="submit" value=" " class="botao-pesquisa" />
                }
            </div>
        </div>
    </nav>

<h1>Edit</h1>

<h4>Usuario</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="cpf" class="control-label"></label>
                <input asp-for="cpf" class="form-control" />
                <span asp-validation-for="cpf" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Idade" class="control-label"></label>
                <input asp-for="Idade" class="form-control" />
                <span asp-validation-for="Idade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="cep" class="control-label"></label>
                <input asp-for="cep" class="form-control" />
                <span asp-validation-for="cep" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rua" class="control-label"></label>
                <input asp-for="Rua" class="form-control" />
                <span asp-validation-for="Rua" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Numero" class="control-label"></label>
                <input asp-for="Numero" class="form-control" />
                <span asp-validation-for="Numero" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Complemento" class="control-label"></label>
                <input asp-for="Complemento" class="form-control" />
                <span asp-validation-for="Complemento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bairro" class="control-label"></label>
                <input asp-for="Bairro" class="form-control" />
                <span asp-validation-for="Bairro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cidade" class="control-label"></label>
                <input asp-for="Cidade" class="form-control" />
                <span asp-validation-for="Cidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Senha" class="control-label"></label>
                <input asp-for="Senha" class="form-control" />
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
