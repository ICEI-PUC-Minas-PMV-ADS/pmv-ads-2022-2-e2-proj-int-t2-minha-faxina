@model PucWebApplication.Models.Usuario
@{
    ViewData["Title"] = "login";
    ViewData["Title"] = "index";
}

<!DOCTYPE html>
<HTML>

<head>
    <title>Minha Faxina - Login</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Configurando Biblioteca Google -->
    <script src="https://apis.google.com/js/platform.js" async defer></script>
    <meta name="google-signin-client_id"
          content="944729605353-5u5dhp1erho3an5nr76kc738qu0hdf5u.apps.googleusercontent.com">
    <link rel="stylesheet"
          href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <!-- Fim da Configuracao Biblioteca Google-->
    <!-- Configurando Bootstrap -->
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
    <link rel="stylesheet" href="../css/owl.carousel.min.css">
    <link rel="stylesheet" href="../css/owl.theme.default.min.css">
    <link href='https://unpkg.com/boxicons@2.1.1/css/boxicons.min.css' rel='stylesheet'>
    <!-- Fim da Configuracao Bootstrap -->
    <!-- Configuração Style -->
    <link rel="stylesheet" href="/css/inicio.css">
    <!-- Fim Configuração Style -->
</head>

<body data-bs-spy="scroll" data-bs-target=".navbar" data-bs-offset="100">


    <!-- TOP NAV -->
    <div class="top-nav" id="home">
    </div>


    <!-- MENU NAV -->
    <nav class=" navbar-expand-lg navbar-light bg-white sticky-top">
        <div class="navbar container">
            <img src="/Imagens/Logo.jpg" class="logo">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="#home">Inicio</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#about">Sobre</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#services">Serviços</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#portfolio">Faxineiras</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#team">Time</a>
                    </li>
                </ul>
                @if (User.Identity.IsAuthenticated)
                {
                    <div class="nav-item usuario">
                        <div class="dropdown">
                            <button class="usuario dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Olá, @User.Identity.Name
                            </button>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item first-item" href="#">Meu Perfil</a></li>
                                <hr>
                                <li><a asp-controller="Usuarios" asp-action="Logout" class="dropdown-item last-item">Sair</a></li>
                            </ul>
                        </div>
                    </div>
                }
                else
                {
                    <div class="nav-item usuario">
                        <button data-bs-toggle="modal" data-bs-target="#exampleModal" class="botao">
                            Login
                        </button>
                    </div>
                }

            </div>

        </div>
        <div>
            <div class="col-auto pesquisa">
                @using (Html.BeginForm("Index", "Usuarios", FormMethod.Get))
                {
                    <input type="text" name="Pesquisa" placeholder="Pesquise por nome, endereço ou CEP">
                    <input type="submit" value=" " class="botao-pesquisa" />
                }
            </div>
        </div>
    </nav>
